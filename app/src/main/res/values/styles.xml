<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MatchHeightLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchParentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContentLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PageContainer" parent="MatchParentLayout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SectionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SectionVertical" parent="SectionLayout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SectionScroll" parent="MatchParentLayout">
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">none</item>
    </style>

</resources>